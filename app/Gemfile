host_os = RbConfig::CONFIG['host_os'].match(/mswin|windows/i) ? :windows : :linux
puts "Host OS is #{host_os}"

source "https://rubygems.org"

gem 'gitlab', git: 'https://github.com/NARKOZ/gitlab.git'

if host_os == :linux
	gem 'gir_ffi'
elsif host_os == :windows
	gem 'rb-notifu'
	gem 'launchy'
end
